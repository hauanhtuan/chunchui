<!DOCTYPE html>
<html lang="en-us">
<head>
  <meta charset="utf-8">
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <title>Tuan Diep's Wedding Invitation</title>
  <style>
    * {
      box-sizing: border-box;
      padding: 0;
      margin: 0;
    }
    body {
      background: #000000;
      text-align: center;
      padding: 0;
      border: 0;
      margin: 0;
      overflow: hidden; /* Ngăn chặn cuộn màn hình khi chế độ ngang */
    }
    body::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 99%, #fad0c4 100%);
      backdrop-filter: blur(10px); /* Điều chỉnh độ mờ */
      z-index: -2; /* Đặt pseudo-element phía sau nội dung */
    }
    #background-canvas {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: #ffffff;
      z-index: -1;
      filter: blur(10px); /* Làm mờ canvas */
    }
    #unity-canvas {
      position: fixed;
      background: #ffffff;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      z-index: 0;
    }
  </style>
</head>
<body>

  <canvas id="background-canvas"></canvas>
  <canvas id="unity-canvas"></canvas>

  <script src="Build/Build_WebGL.loader.js"></script>
  <script>
    function resizeCanvas() {
      var canvas = document.getElementById('unity-canvas');
      var windowWidth = window.innerWidth;
      var windowHeight = window.innerHeight;

      if (windowWidth / windowHeight < 9 / 16) {
        // Nếu tỷ lệ cửa sổ nhỏ hơn 9:16, điều chỉnh theo chiều rộng
        canvas.style.width = windowWidth + 'px';
        canvas.style.height = (windowWidth * 16 / 9) + 'px';
      } else {
        // Nếu tỷ lệ cửa sổ lớn hơn hoặc bằng 9:16, điều chỉnh theo chiều cao
        canvas.style.width = (windowHeight * 9 / 16) + 'px';
        canvas.style.height = windowHeight + 'px';
      }
    }

    function copyCanvasContent() {
      var unityCanvas = document.getElementById('unity-canvas');
      var backgroundCanvas = document.getElementById('background-canvas');
      var backgroundContext = backgroundCanvas.getContext('2d');

      backgroundCanvas.width = unityCanvas.width;
      backgroundCanvas.height = unityCanvas.height;

      backgroundContext.clearRect(0, 0, backgroundCanvas.width, backgroundCanvas.height);
      backgroundContext.drawImage(unityCanvas, 0, 0, unityCanvas.width, unityCanvas.height, 0, 0, backgroundCanvas.width, backgroundCanvas.height);
    }

    window.addEventListener('resize', resizeCanvas);
    window.addEventListener('load', resizeCanvas);

    createUnityInstance(document.querySelector("#unity-canvas"), {
      dataUrl: "Build/Build_WebGL.data.unityweb",
      frameworkUrl: "Build/Build_WebGL.framework.js.unityweb",
      codeUrl: "Build/Build_WebGL.wasm.unityweb",
      streamingAssetsUrl: "StreamingAssets",
      companyName: "DefaultCompany",
      productName: "ChunChui",
      productVersion: "1.0",
    }).then((unityInstance) => {
      resizeCanvas();
      function update() {
        copyCanvasContent();
        requestAnimationFrame(update);
      }
      update();
    });
  </script>
</body>
</html>
