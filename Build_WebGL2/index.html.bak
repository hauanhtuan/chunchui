<!DOCTYPE html>
<html lang="en-us">
<head>
  <meta charset="utf-8">
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <title>Tuan Diep's Wedding Invitation</title>
  <style>
  @font-face {
      font-family: 'CustomFont';
      src: url('Build/FVF Fernando 08.ttf') format('truetype');
      font-weight: normal;
      font-style: normal;
    }
    #unity-canvas {
      position: fixed;
      background: #ffffff;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      z-index: 0;
    }

     #progress-container {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      z-index: 10;
	  background: #FFC9C9;
    }

    #progress-bar {
      width: 50%;
      background: #000;
      border: 3px solid #000;
      
      overflow: hidden;
    }

    #progress-bar-inner {
      height: 15px;
      width: 0;
      background: #fff;
    }
	#loading-text {
	 font-family: 'CustomFont', sans-serif; /* Use custom font */
      font-size: 30px; /* Adjust font size */
       color: #fff;
      margin-bottom: 20px;
	 text-shadow: 
        2px 2px 0 #000, 
        -2px -2px 0 #000, 
        -2px 2px 0 #000, 
        2px -2px 0 #000;
    }
  </style>
</head>
<body style="text-align: center; padding: 0; border: 0; margin: 0;">
  <div id="progress-container">
   <div id="loading-text">Đang tải...</div>
    <div id="progress-bar">
      <div id="progress-bar-inner"></div>
    </div>
  </div>
  <canvas id="unity-canvas"></canvas>
  <script src="Build/Build_WebGL2.loader.js"></script>
  <script>
    function resizeCanvas() {
      var canvas = document.getElementById('unity-canvas');
      var progressContainer = document.getElementById('progress-container');
      var windowWidth = window.innerWidth;
      var windowHeight = window.innerHeight;
      var width, height;

      if (windowWidth / windowHeight < 9 / 16) {
        // If the window ratio is smaller than 9:16, adjust according to the width
        width = windowWidth;
        height = (windowWidth * 16 / 9);
      } else {
        // If the window ratio is greater than or equal to 9:16, adjust according to the height
        width = (windowHeight * 9 / 16);
        height = windowHeight;
      }

      canvas.style.width = width + 'px';
      canvas.style.height = height + 'px';
      canvas.style.top = '50%';
      canvas.style.left = '50%';
      canvas.style.transform = 'translate(-50%, -50%)';

      progressContainer.style.width = width + 'px';
      progressContainer.style.height = height + 'px';
      progressContainer.style.top = '50%';
      progressContainer.style.left = '50%';
      progressContainer.style.transform = 'translate(-50%, -50%)';
    }
    window.addEventListener('resize', resizeCanvas);
    window.addEventListener('load', resizeCanvas);

    createUnityInstance(document.querySelector("#unity-canvas"), {
      dataUrl: "Build/Build_WebGL2.data.unityweb",
      frameworkUrl: "Build/Build_WebGL2.framework.js.unityweb",
      codeUrl: "Build/Build_WebGL2.wasm.unityweb",
      streamingAssetsUrl: "StreamingAssets",
      companyName: "DefaultCompany",
      productName: "ChunChui",
      productVersion: "1.0",
    }, (progress) => {
      console.log(progress);
      var progressBarInner = document.getElementById('progress-bar-inner');
      progressBarInner.style.width = (progress * 90) + '%';
    }).then((unityInstance) => {
      resizeCanvas();
	  var progressBarInner = document.getElementById('progress-bar-inner');
	  setTimeout(()=>{
	    progressBarInner.style.width = (95) + '%';
	  },1000);
      setTimeout(() => {
	  progressBarInner.style.width = (100) + '%';
        var progressContainer = document.getElementById('progress-container');
        progressContainer.style.display = 'none';
      }, 2500); 
    });
  </script>
</body>
</html>
